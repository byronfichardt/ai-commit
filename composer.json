{
    "name": "byron/ai-git-automation",
    "description": "AI-powered Git automation for commit messages and PR summaries",
    "keywords": ["git", "ai", "openai", "claude", "commit", "pr", "pull request"],
    "homepage": "https://github.com/byron/ai-commit",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Byron",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "laravel-zero/framework": "^11.36.1",
        "guzzlehttp/guzzle": "^7.8",
        "ext-sodium": "*"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8",
        "laravel/pint": "^1.18.3",
        "mockery/mockery": "^1.6.12",
        "pestphp/pest": "^3.7.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": ["ai-git"],
    "scripts": {
        "post-install-cmd": [
            "chmod +x ai-git"
        ],
        "post-update-cmd": [
            "chmod +x ai-git"
        ]
    }
}
