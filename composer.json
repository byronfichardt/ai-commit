{
    "name": "byron/ai-git-automation",
    "description": "AI-powered Git automation for commit messages and PR summaries",
    "keywords": ["git", "ai", "openai", "claude", "commit", "pr", "pull request"],
    "homepage": "https://github.com/byron/ai-commit",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Byron",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "ext-sodium": "*",
        "guzzlehttp/guzzle": "^7.8",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/console": "^10.0|^11.0",
        "illuminate/http": "^10.0|^11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "laravel/pint": "^1.18.3",
        "mockery/mockery": "^1.6.12",
        "pestphp/pest": "^3.7.1"
    },
    "autoload": {
        "psr-4": {
            "Byron\\AiGit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Byron\\AiGit\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Byron\\AiGit\\AiGitServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
